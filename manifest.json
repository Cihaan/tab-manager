{
  "manifest_version": 3,
  "name": "Tab Manager",
  "description": "A tool that allows you to manage your tabs in a more efficient way if you have a lot of them open.",
  "version": "1.0",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
